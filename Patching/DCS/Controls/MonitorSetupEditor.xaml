            <Style TargetType="{x:Type CheckBox}" x:Key="UserInterfaceCheckbox">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type CheckBox}">
                            <Border Width="{TemplateBinding Width}" Height="{TemplateBinding Height}"
                                    BorderBrush="Transparent" Background="Transparent" Name="Border">
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center" Padding="0"
                                       Name="AppIcon" FontFamily="Segoe MDL2 Assets" FontSize="36"
                                       FontWeight="UltraBold" Content="&#xE71D;">
                                    <Label.RenderTransform>
                                        <ScaleTransform
                                            CenterX="14"
                                            CenterY="14"
                                            ScaleX="{Binding Data.IconScale, Source={StaticResource BindingProxy}}"
                                            ScaleY="{Binding Data.IconScale, Source={StaticResource BindingProxy}}" />
                                    </Label.RenderTransform>
                                </Label>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="AppIcon" Property="Foreground" Value="#FF231F20" />
                                    <Setter TargetName="Border" Property="ToolTip"
                                            Value="This monitor is used for the DCS User Interface and Menus" />
                                </Trigger>
                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition Property="IsChecked" Value="False" />
                                    </MultiTrigger.Conditions>
                                    <Setter TargetName="AppIcon" Property="Foreground" Value="#20231F20" />
                                    <Setter TargetName="Border" Property="ToolTip"
                                            Value="Click here to use this monitor for DCS User Interface and Menus" />
                                </MultiTrigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="MonitorIncludedCheckbox" TargetType="CheckBox">
                <Setter Property="IsChecked" Value="{Binding Path=Data.Included}" />
                <Setter Property="IsEnabled" Value="{Binding InclusionCanBeChanged}" />
                <Setter Property="ToolTip">
                    <Setter.Value>
                        <TextBlock Text="{Binding Path=InclusionNarrative}" />
                    </Setter.Value>
                </Setter>
                <Setter Property="ToolTipService.ShowOnDisabled" Value="true" />
                <Setter Property="VerticalAlignment" Value="Top" />
                <Setter Property="HorizontalAlignment" Value="Left" />
                <Setter Property="Margin" Value="6" />
            </Style>

            <Style x:Key="DimIfNotIncluded" TargetType="{x:Type Shape}">
                <Setter Property="Stroke" Value="Black" />
                <Style.Triggers>
                    <MultiDataTrigger>
                        <MultiDataTrigger.Conditions>
                            <Condition Binding="{Binding Path=Data.Included}" Value="False" />
                        </MultiDataTrigger.Conditions>
                        <MultiDataTrigger.Setters>
                            <Setter Property="Stroke" Value="LightGray" />
                        </MultiDataTrigger.Setters>
                    </MultiDataTrigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="ResolutionFrame" TargetType="Rectangle">
                <Setter Property="Stroke" Value="Green" />
                <Setter Property="StrokeThickness" Value="2" />
            </Style>
            <helios:EnumConverter Type="{x:Type dcs:SourceOfAdditionalViewports}" x:Key="SourceOfAdditionalViewports" />
            <helios:EnumConverter Type="{x:Type dcs:IrisConfigurationType}" x:Key="IrisConfigurationType" />
            <helios:EnumConverter Type="{x:Type dcs:MonitorLayoutMode}" x:Key="MonitorLayoutMode" />
        </ResourceDictionary>
    </FrameworkElement.Resources>
    <StackPanel>
        <heliosDcs:InstallationLocationsGroup />
        <GroupBox Header="Monitor Layout" Style="{StaticResource MonitorLayoutGroup}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="10" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="120" />
                    <!-- primary labels -->
                    <ColumnDefinition Width="*" />
                    <!-- primary controls and long messages-->
                </Grid.ColumnDefinitions>
                <Label Grid.Row="1" Grid.Column="0" Style="{StaticResource InterfaceEditorLabel}" Content="Layout Mode" />
                <ComboBox Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" MinWidth="280" MaxWidth="400" 
                          ItemsSource="{Binding DisplayNames, Source={StaticResource MonitorLayoutMode}}" 
                          SelectedItem="{Binding Data.MonitorLayoutMode, Converter={StaticResource MonitorLayoutMode}}" />
                <TextBlock Grid.Row="2" Grid.Column="1" Style="{StaticResource Documentation}">
                    Selects one of the ways in which DCS' "Resolution" rectangle can be mapped to the displays.  
                    This setting is shared across all profiles on this computer.
                </TextBlock>

                <Grid Grid.Row="4" Grid.Column="0">
                    <Label Style="{StaticResource InterfaceEditorLabel}" Content="In-Game View" />
                    <Slider HorizontalAlignment="Right" Margin="6" Orientation="Vertical" Value="{Binding Scale}"
                            Minimum="0.04" Maximum="0.18" LargeChange="0.01" SmallChange="0.005" />
                </Grid>
                <ScrollViewer Grid.Row="4" Grid.Column="1" HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Disabled">
                    <Grid>
                        <!-- DCS resolution rectangle underlay -->
                        <Canvas>
                            <Rectangle Canvas.Left="{Binding ScaledRenderedRectangle.Left}" 
                                       Canvas.Top="{Binding ScaledRenderedRectangle.Top}"
                                       Width="{Binding ScaledRenderedRectangle.Width}"
                                       Height="{Binding ScaledRenderedRectangle.Height}">
                                <Rectangle.Fill>
                                    <VisualBrush TileMode="Tile" Viewport="0,0,10,10" ViewportUnits="Absolute"
                                                 Viewbox="0,0,10,10" ViewboxUnits="Absolute">
                                        <VisualBrush.Visual>
                                            <Grid Background="Transparent">
                                                <Path Data="M 0 0 L 10 10" Stroke="LightGray" />
                                            </Grid>
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </Rectangle.Fill>
                            </Rectangle>
                        </Canvas>

                        <!-- DCS main view underlay -->
                        <Canvas>
                            <Rectangle IsHitTestVisible="False" Canvas.Left="{Binding Path=ScaledMain.Left}"
                                       Canvas.Top="{Binding Path=ScaledMain.Top}"
                                       Width="{Binding Path=ScaledMain.Width}"
                                       Height="{Binding Path=ScaledMain.Height}" Stroke="Transparent">
                                <Rectangle.Fill>
                                    <VisualBrush TileMode="Tile" Viewport="0,0,10,10" ViewportUnits="Absolute"
                                                 Viewbox="0,0,10,10" ViewboxUnits="Absolute">
                                        <VisualBrush.Visual>
                                            <Grid Background="Transparent">
                                                <Path Data="M 0 0 L 10 10" Stroke="Red" />
                                            </Grid>
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </Rectangle.Fill>
                            </Rectangle>
                        </Canvas>

                        <!-- monitors -->
                        <ItemsControl HorizontalAlignment="Left" ItemsSource="{Binding Monitors}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas Width="{Binding ScaledTotalWidth}" Height="{Binding ScaledTotalHeight}" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemContainerStyle>
                                <Style TargetType="ContentPresenter">
                                    <Setter Property="Canvas.Left" Value="{Binding Path=Rect.X}" />
                                    <Setter Property="Canvas.Top" Value="{Binding Path=Rect.Y}" />
                                </Style>
                            </ItemsControl.ItemContainerStyle>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Rectangle Width="{Binding Path=Rect.Width}"
                                                   Height="{Binding Path=Rect.Height}"
                                                   Fill="White"
                                                   Style="{StaticResource DimIfNotIncluded}" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- DCS main view on top -->
                        <Canvas>
                            <Rectangle IsHitTestVisible="False" Canvas.Left="{Binding Path=ScaledMain.Left}"
                                       Canvas.Top="{Binding Path=ScaledMain.Top}"
                                       Width="{Binding Path=ScaledMain.Width}"
                                       Height="{Binding Path=ScaledMain.Height}" 
                                       Stroke="SkyBlue"
                                       Fill="#8087CEEB">
                            </Rectangle>
                        </Canvas>

                        <!-- viewports -->
                        <ItemsControl HorizontalAlignment="Left" ItemsSource="{Binding Viewports}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas IsHitTestVisible="False" Opacity="0.2" Width="{Binding ScaledTotalWidth}"
                                            Height="{Binding ScaledTotalHeight}" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemContainerStyle>
                                <Style TargetType="ContentPresenter">
                                    <Setter Property="Canvas.Left" Value="{Binding Path=Rect.X}" />
                                    <Setter Property="Canvas.Top" Value="{Binding Path=Rect.Y}" />
                                </Style>
                            </ItemsControl.ItemContainerStyle>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Rectangle Width="{Binding Path=Rect.Width}"
                                                   Height="{Binding Path=Rect.Height}" Stroke="Red" Fill="Red" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- monitors user interface -->
                        <ItemsControl HorizontalAlignment="Left" ItemsSource="{Binding Monitors}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas Width="{Binding ScaledTotalWidth}" Height="{Binding ScaledTotalHeight}" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemContainerStyle>
                                <Style TargetType="ContentPresenter">
                                    <Setter Property="Canvas.Left" Value="{Binding Path=Rect.X}" />
                                    <Setter Property="Canvas.Top" Value="{Binding Path=Rect.Y}" />
                                </Style>
                            </ItemsControl.ItemContainerStyle>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <CheckBox Width="{Binding Path=Rect.Width}" Height="{Binding Path=Rect.Height}"
                                                  IsChecked="{Binding Path=Data.Main}"
                                                  IsEnabled="{Binding MainAssignmentCanBeChanged}"
                                                  Style="{StaticResource AircraftCheckbox}" />
                                        <CheckBox Style="{StaticResource MonitorIncludedCheckbox}" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- DCS resolution rectangle -->
                        <Canvas>
                            <Rectangle Canvas.Left="{Binding ScaledRenderedRectangle.Left}" 
                                       Canvas.Top="{Binding ScaledRenderedRectangle.Top}"
                                       Width="{Binding ScaledRenderedRectangle.Width}"
                                       Height="{Binding ScaledRenderedRectangle.Height}"
                                       Style="{StaticResource ResolutionFrame}" />
                        </Canvas>
                    </Grid>
                </ScrollViewer>

                <Label Grid.Row="6" Grid.Column="0" Style="{StaticResource InterfaceEditorLabel}"
                       Content="Menus / Loading" />

                <ScrollViewer Grid.Row="6" Grid.Column="1" HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Disabled">
                    <Grid>
                        <!-- DCS resolution rectangle underlay -->
                        <Canvas>
                            <Rectangle Canvas.Left="{Binding ScaledRenderedRectangle.Left}" 
                                       Canvas.Top="{Binding ScaledRenderedRectangle.Top}"
                                       Width="{Binding ScaledRenderedRectangle.Width}"
                                       Height="{Binding ScaledRenderedRectangle.Height}">
                                <Rectangle.Fill>
                                    <VisualBrush TileMode="Tile" Viewport="0,0,10,10" ViewportUnits="Absolute"
                                                 Viewbox="0,0,10,10" ViewboxUnits="Absolute">
                                        <VisualBrush.Visual>
                                            <Grid Background="Transparent">
                                                <Path Data="M 0 0 L 10 10" Stroke="LightGray" />
                                            </Grid>
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </Rectangle.Fill>
                            </Rectangle>
                        </Canvas>

                        <!-- DCS UI view underlay -->
                        <Canvas>
                            <Rectangle IsHitTestVisible="False" Canvas.Left="{Binding Path=ScaledUserInterface.Left}"
                                       Canvas.Top="{Binding Path=ScaledUserInterface.Top}"
                                       Width="{Binding Path=ScaledUserInterface.Width}"
                                       Height="{Binding Path=ScaledUserInterface.Height}" Stroke="Transparent">
                                <Rectangle.Fill>
                                    <VisualBrush TileMode="Tile" Viewport="0,0,10,10" ViewportUnits="Absolute"
                                                 Viewbox="0,0,10,10" ViewboxUnits="Absolute">
                                        <VisualBrush.Visual>
                                            <Grid Background="Transparent">
                                                <Path Data="M 0 0 L 10 10" Stroke="Red" />
                                            </Grid>
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </Rectangle.Fill>
                            </Rectangle>
                        </Canvas>

                        <!-- monitors2 -->
                        <ItemsControl HorizontalAlignment="Left" ItemsSource="{Binding Monitors}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas Width="{Binding ScaledTotalWidth}" Height="{Binding ScaledTotalHeight}" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemContainerStyle>
                                <Style TargetType="ContentPresenter">
                                    <Setter Property="Canvas.Left" Value="{Binding Path=Rect.X}" />
                                    <Setter Property="Canvas.Top" Value="{Binding Path=Rect.Y}" />
                                </Style>
                            </ItemsControl.ItemContainerStyle>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Rectangle Width="{Binding Path=Rect.Width}"
                                                   Height="{Binding Path=Rect.Height}"
                                                   Fill="White"
                                                   Style="{StaticResource DimIfNotIncluded}" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- DCS UI view on top -->
                        <Canvas>
                            <Rectangle IsHitTestVisible="False" Canvas.Left="{Binding Path=ScaledUserInterface.Left}"
                                       Canvas.Top="{Binding Path=ScaledUserInterface.Top}"
                                       Fill="#80D3D3D3" 
                                       Width="{Binding Path=ScaledUserInterface.Width}"
                                       Height="{Binding Path=ScaledUserInterface.Height}" Stroke="LightGray">
                            </Rectangle>
                        </Canvas>

                        <!-- monitors2 user interface -->
                        <ItemsControl HorizontalAlignment="Left" ItemsSource="{Binding Monitors}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas Width="{Binding ScaledTotalWidth}" Height="{Binding ScaledTotalHeight}" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemContainerStyle>
                                <Style TargetType="ContentPresenter">
                                    <Setter Property="Canvas.Left" Value="{Binding Path=Rect.X}" />
                                    <Setter Property="Canvas.Top" Value="{Binding Path=Rect.Y}" />
                                </Style>
                            </ItemsControl.ItemContainerStyle>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <CheckBox Width="{Binding Path=Rect.Width}" Height="{Binding Path=Rect.Height}"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  IsChecked="{Binding Path=Data.UserInterface}"
                                                  IsEnabled="{Binding UserInterfaceAssignmentCanBeChanged}"
                                                  Style="{StaticResource UserInterfaceCheckbox}" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- DCS resolution rectangle -->
                        <Canvas>
                            <Rectangle Canvas.Left="{Binding ScaledRenderedRectangle.Left}" 
                                       Canvas.Top="{Binding ScaledRenderedRectangle.Top}"
                                       Width="{Binding ScaledRenderedRectangle.Width}"
                                       Height="{Binding ScaledRenderedRectangle.Height}"
                                       Style="{StaticResource ResolutionFrame}" />
                        </Canvas>
                    </Grid>
                </ScrollViewer>

                <Label Grid.Row="8" Grid.Column="0" Style="{StaticResource InterfaceEditorLabel}" Content="Resolution" />
                <StackPanel Grid.Row="8" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Rectangle Margin="0,6,3,0" Height="14" Width="40" VerticalAlignment="Center"
                               Style="{StaticResource ResolutionFrame}" />
                    <Label Style="{StaticResource InterfaceEditorLabel}" Padding="3" Content="=" />
                    <Label Style="{StaticResource InterfaceEditorLabel}" Padding="0,3,0,3"
                           Content="{Binding Path=ResolutionRectangle.Width}" />
                    <Label Style="{StaticResource InterfaceEditorLabel}" Padding="0,3,0,3" Content="x" />
                    <Label Style="{StaticResource InterfaceEditorLabel}" Padding="0,3,3,3"
                           Content="{Binding Path=ResolutionRectangle.Height}" />
                </StackPanel>
                <WrapPanel Grid.Row="9" Grid.Column="1" Orientation="Vertical">
                    <TextBlock Style="{StaticResource DocumentationTopLeftMode}">Minimum resolution that must be selected in DCS Options.</TextBlock>
                    <TextBlock Style="{StaticResource DocumentationNotTopLeftMode}">Exact resolution that must be selected in DCS Options.</TextBlock>
                    <TextBlock Margin="0,6,0,0" Style="{StaticResource DocumentationTopLeftMode}">If this resolution is not available in DCS, you can choose any larger resolution.</TextBlock>
                    <TextBlock Margin="0,6,0,0" Style="{StaticResource DocumentationTopLeftMode}">Alternatively, you may type it into the DCS Options "Resolution" combo box instead of selecting one.</TextBlock>
                    <TextBlock Margin="0,6,0,0" Style="{StaticResource DocumentationNotTopLeftMode}">If this resolution is not available in DCS, you must type it into the DCS Options "Resolution" combo box instead of selecting one.</TextBlock>
                </WrapPanel>
            </Grid>
        </GroupBox>
        <Expander Header="Advanced Options" Margin="0,0,0,12" IsExpanded="False" Style="{StaticResource GroupBoxWithExpanderStyle}">
            <Grid Height="Auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="120"/>
                    <!-- primary labels -->
                    <ColumnDefinition Width="*"/>
                    <!-- primary controls and long messages-->
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Content="Additional Viewports"/>
                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                    <!-- shielded from stretching -->
                    <ComboBox VerticalAlignment="Center" MinWidth="280"  ItemsSource="{Binding Source={StaticResource SourceOfAdditionalViewports}, Path=DisplayNames}" SelectedItem="{Binding SourceOfAdditionalViewports, Converter={StaticResource SourceOfAdditionalViewports}}" />
                </StackPanel>
                <Label Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Content="Iris Screen Exporter" ToolTip="Iris can be used when Helios is running on a different computer from DCS"/>
                <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                    <!-- shielded from stretching -->
                    <ComboBox VerticalAlignment="Center" MinWidth="280"  ItemsSource="{Binding Source={StaticResource IrisConfigurationType}, Path=DisplayNames}" SelectedItem="{Binding IrisConfigurationType, Converter={StaticResource IrisConfigurationType}}" />
                </StackPanel>
                <WrapPanel Grid.Row="3" Grid.Column="1" Orientation="Vertical">
                    <TextBlock Style="{StaticResource DocumentationTopLeftMode}">The Iris client runs on the remote computer where the Helios profile will be running in the Control Center.  The Iris client needs a configuration which tells Iris where to render the viewports it receives over the network.</TextBlock>
                    <TextBlock Margin="0,6,0,0" Style="{StaticResource DocumentationTopLeftMode}">The Iris server runs on the computer where DCS runs.  The Iris server needs a configuration which tells Iris where to capture the viewports exported from DCS and also the IP address where to send the captured viewport data.</TextBlock>
                    <TextBlock Margin="0,6,0,0" Style="{StaticResource DocumentationTopLeftMode}">Start by using the Helios profile which will be run in Control Center on the remote machine 
                        and selecting "The current Profile will be run on the remote computer running Helios" 
                        from the dropdown above.  This will result in a partial Iris configuration being
                        created for running on the remote computer.  It will also create a compact profile
                        containing only the viewports needed on the DCS (local) computer.</TextBlock>
                    <TextBlock Margin="0,6,0,0" Style="{StaticResource DocumentationTopLeftMode}">Next, open the compact profile in profile editor, and "Reset Monitors" ensuring that 
                        "No Scaling" is also specified.  A second partial Iris configuration will be 
                        produced when "The current profile contains viewports for the computer running DCS"
                        is selected in the dropdown above.  This is used on the DCS (local) computer and 
                        this will match the Monitor Setup file which is also configured in this interface.</TextBlock>
                </WrapPanel>
            </Grid>
        </Expander>
        <GroupBox Header="DCS Monitor Setup File Output" Style="{StaticResource BasicGroup}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="10" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <WrapPanel Grid.Row="1" Style="{StaticResource HideIfNotSavedStyle}">
                    <!-- wrapped only to use proper data context for "Status" in style -->
                    <controls:CombinedMonitorSetupControl DataContext="{Binding CombinedMonitorSetup}" />
                </WrapPanel>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <!-- primary labels -->
                        <ColumnDefinition Width="Auto" MinWidth="120" />
                        <!-- primary controls and long messages-->
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Label Grid.Row="1" Grid.Column="0" Content="Status" Style="{StaticResource InterfaceEditorLabel}" />
                    <Grid Grid.Row="1" Grid.Column="1" Style="{StaticResource UpToDateStyle}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource InterfaceEditorStatus}">Monitor setup files are up to date.</TextBlock>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="1" Style="{StaticResource OutOfDateStyle}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource InterfaceEditorStatus}"
                                   Foreground="Red">
                            Monitor setup files need to be reconfigured.
                        </TextBlock>
                        <Button Grid.Row="0" Grid.Column="1" Command="{Binding ConfigureCommand}"
                                CommandParameter="{Binding RelativeSource={RelativeSource Self}}"
                                Style="{StaticResource InterfaceEditorButton}">
                            Configure
                        </Button>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="1" Style="{StaticResource ResetMonitorsRequiredStyle}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource InterfaceEditorStatus}"
                                   Foreground="Red">
                            You must complete 'Reset Monitors' before configuring monitor setup.
                        </TextBlock>
                        <Button Grid.Row="0" Grid.Column="1" Command="{x:Static windows:SharedCommands.ResetMonitors}"
                                Style="{StaticResource InterfaceEditorButton}">
                            Reset Monitors
                        </Button>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="1" Style="{StaticResource ProfileSaveRequiredStyle}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource InterfaceEditorStatus}"
                                   Foreground="Red">
                            You must save the profile at least once before configuring monitor setup.
                        </TextBlock>
                        <Button Grid.Row="0" Grid.Column="1" Command="Save"
                                Style="{StaticResource InterfaceEditorButton}">
                            Save Profile
                        </Button>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="1" Style="{StaticResource NoLocationsStyle}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource InterfaceEditorStatus}"
                                   Foreground="Red">
                            You must configure DCS installation locations before configuring monitor setup.
                        </TextBlock>
                    </Grid>
                </Grid>
            </Grid>
        </GroupBox>
    </StackPanel>
</heliosSdk:HeliosInterfaceEditor>