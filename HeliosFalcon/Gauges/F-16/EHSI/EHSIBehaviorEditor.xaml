<HeliosSdk:HeliosPropertyEditor  x:Class="GadrocsWorkshop.Helios.Gauges.Falcon.EHSI.EHSIBehaviorEditor"
             xmlns:HeliosSdk="clr-namespace:GadrocsWorkshop.Helios.Windows.Controls;assembly=Helios"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             mc:Ignorable="d" d:DesignHeight="50" d:DesignWidth="225">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <Label Content="Enable Transparency"
               Grid.Column="0"
               HorizontalAlignment="Center"
               VerticalAlignment="Center" Height="30" Margin="0,10,0,0"/>
        <CheckBox IsChecked="{Binding Control.TransparentBackground}"
                  IsEnabled="True"
                  Grid.Column="1"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center" Margin="2,6,0,0" />
    </Grid>
</HeliosSdk:HeliosPropertyEditor>
